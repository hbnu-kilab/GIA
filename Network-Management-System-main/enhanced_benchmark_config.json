{
    "llm_config_path": "enhanced_llm_configs.json",
    "dataset_path": "dataset/test.csv",
    "docs_path": "docs7_export",
    "db_path": "enhanced_benchmark_experiments.db",
    "enable_rag": true,
    "max_concurrent": 3,
    "system_prompt": "당신은 네트워크 엔지니어링 전문가입니다. 네트워크 설정, BGP, OSPF, VLAN, 라우팅, 스위칭, 보안 등에 대한 정확하고 기술적으로 상세한 답변을 제공해주세요. 제공된 참고 문서나 컨텍스트가 있다면 이를 적극 활용하여 답변하세요. 답변은 간결하면서도 정확해야 하며, 가능하면 실제 설정 예시나 명령어를 포함해주세요.",
    "experiments": {
        "baseline": {
            "description": "RAG 없이 순수 LLM 성능 측정 - 모델의 내재된 네트워크 지식만으로 답변",
            "use_rag": false,
            "max_iterations": 1
        },
        "rag": {
            "description": "RAG 기반 성능 측정 - 네트워크 문서 검색을 통한 컨텍스트 제공",
            "use_rag": true,
            "max_iterations": 1,
            "top_k_contexts": 5
        },
        "rag_iterative": {
            "description": "RAG + 반복 개선 - 문서 검색 + 3회 반복을 통한 답변 품질 향상",
            "use_rag": true,
            "max_iterations": 3,
            "top_k_contexts": 5
        },
        "rag_extensive": {
            "description": "RAG 확장 모드 - 더 많은 컨텍스트와 반복으로 최대 성능 추구",
            "use_rag": true,
            "max_iterations": 3,
            "top_k_contexts": 10
        }
    },
    "evaluation": {
        "metrics": [
            "exact_match",
            "bert_score",
            "rouge_score",
            "latency",
            "cost",
            "tokens_per_second"
        ],
        "bert_score_model": "klue/bert-base",
        "rouge_use_stemmer": true
    },
    "reporting": {
        "auto_generate": true,
        "include_charts": true,
        "include_detailed_analysis": true,
        "output_formats": [
            "html",
            "pdf",
            "json"
        ]
    },
    "resource_limits": {
        "max_input_tokens": 8192,
        "max_output_tokens": 4096,
        "timeout_seconds": 300,
        "max_cost_per_question": 0.1
    }
}